<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailedInfoFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarDetailImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="@dimen/padding_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/avatar_example" />

    <TextView
        android:id="@+id/firstNameDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_main"
        app:layout_constraintStart_toStartOf="@id/avatarDetailImageView"
        app:layout_constraintTop_toBottomOf="@id/avatarDetailImageView"
        tools:text="First name" />

    <TextView
        android:id="@+id/secondNameDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_main"
        app:layout_constraintStart_toStartOf="@id/firstNameDetailTextView"
        app:layout_constraintTop_toBottomOf="@id/firstNameDetailTextView"
        tools:text="Second name" />

    <TextView
        android:id="@+id/emailDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_main"
        app:layout_constraintStart_toStartOf="@id/secondNameDetailTextView"
        app:layout_constraintTop_toBottomOf="@id/secondNameDetailTextView"
        tools:text="Email" />

</androidx.constraintlayout.widget.ConstraintLayout>