<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular_ru</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewStyle.SmallItalic" >
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewStyle.Bold" >
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyle.Large" >
        <item name="android:textSize">24sp</item>
    </style>
</resources>